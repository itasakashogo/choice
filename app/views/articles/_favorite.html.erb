<% if @article.favorited_by?(current_user) %>
    <%= link_to article_favorites_path(@article), method: :delete do %>
      <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
      <%= @article.favorites.count %> いいね
    <% end %>
<% else %>
    <%= link_to article_favorites_path(@article), method: :post do %>
	  <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
      <%= @article.favorites.count %> いいね
	<% end %>
<% end %><br>
  <i class="fa fa-comment"></i>
  <a href="#comments"><%= @article.article_comments.count %>コメント</a>
<div class="comment-list bt style-2" id="comments">
    <div class="float-wrapper">
        <h3 class="comment-count"><%= @article.article_comments.count %>件コメント</h3>
    </div>
	    <% @article.article_comments.each do |article_comment| %>
	        <div class="comment">
	            <div class="comment-body bb">
	                <div class="comment-text">
	                    <div class="comment-author clearfix">
	                        <a href="#" class="link-author"><%= article_comment.user.name %></a>さん
	                        <span class="comment-meta">
	                          <span class="comment-date"><%= article_comment.created_at.strftime('%Y/%m/%d') %></span>
	                        </span>

	                    </div>
	                    <div class="comment-entry"><%= article_comment.comment %></div>
	                </div>
	            </div>
	        </div>
	    <% end %><br>
</div>