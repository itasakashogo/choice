<%= render 'articles/head'%>



<div class="row" style="margin: 5px;">

	<%= render 'articles/category'%>

    <div class="col-lg-10" style="text-align: center;" >
		<% @articles.each do |article| %>
		    <div class="col-md-4" style="margin-top: 10px;">
		  	  <%= link_to article_path(article.id) do %>
				<%= attachment_image_tag article, :image, size: '150x150' , fallback: "logo.jpg"%>
		        <% end %>
		    	<p>投稿者：<%= link_to user_path(article.user.id) do %>
		    		<%= article.user.name %></p>
		    	<% end %>
			    <p>店舗名：<%= article.shop_name %></p>
			    <p>場所：<%= article.store_address %></p>
			    <p>内容：<%= article.caption %></p>
			    <p>投稿時間：<%= article.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %></p>
			    <p>#タグ：<% article.genre_list.each do |tag| %>
			          <%= link_to tag, tags_path(search:tag),  class: 'label label-primary' %></p>
			    <% end %>
		    </div>
		<% end %>
	</div>
	<div class="row" style="text-align: center;">
		  	<%= paginate @tags %>
	</div>
</div>