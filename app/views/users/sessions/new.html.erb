<div class="top">
  <div class="container">
        <div id="content" class="col-md-7">あなたの<br>オススメを<br>シェアしよう！</div>
        <div class="col-md-5">

          <h2 class="login" style="color: white" >ログイン</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


             <div class="field">
              <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder: "アカウント名",class:'form-control' %>
            </div><br>

            <div class="field">
              <%= f.password_field :password, autocomplete: "off",placeholder: "パスワード",class:'form-control' %>
            </div><br>

            <% if devise_mapping.rememberable? -%>
              <div class="field" style="color: white">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div><br>
            <% end -%>

            <div class="actions">
              <%= f.submit "ログイン",class:'form-control' %>
            </div>
          <% end %>
          <%= render "users/shared/links"  %>
        </div>
  </div>
</div>