<%= render 'articles/head'%>

<div class="container">

    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpg', class: "img-circle profile-img", fallback: "no_image.jpg", size: '200x200' %>名前：<%= @user.name %>
	<% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_registration_path(@user), class: "pull-right" %></p>
    <% end %>
    <div class="row" style="margin: 20px;">
		<% @user.articles.each do |article| %>
           <div class="col-md-2">
				<%= article.shop_name %>
				<%= link_to article_path(article.id) do %>	
				<%= attachment_image_tag article, :image, size: '150x150' , fallback: "logo.jpg"%>
		        <% end %>
			</div>
		<% end %>
	</div>

</div>

  <%= render 'articles/footer'%>
