<div class="top">
  <div class="container" >
    <div id="content" class="col-md-7">あなたの<br>オススメを<br>シェアしよう！</div>

    <div class="col-md-5">
      <h2 class="sign_up" style="color: white">新規登録</h2>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>


      <div class="form-group has-icon">
          <div class="user-edit-image">
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb"%>
          </div>
          <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
      </div>

       <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder: "アカウント名",class:'form-control'%>
      </div><br>

     <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス",class:'form-control' %>
      </div><br>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off",placeholder: "パスワード",class:'form-control' %>
      </div><br>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "再入力",class:'form-control' %>
      </div><br>

      <div class="actions">
        <%= f.submit "登録",class:'form-control' %>
      </div>
    <% end %><br>

    <%= render "users/shared/links" %>
  </div>
  </div>
  </div>
</div>
